{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUsername %>/<%= projectName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "engines": {
    "node": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "remove-lockfiles && lint-staged"
    }
  },
  "scripts": {<% if (esnext) { %>
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files --ignore **/*.test.js",
    "postbuild": "rimraf dist/**/*.test.js",<% } %>
    "test:watch": "jest --watch",
    "test": "xo && jest<% if (coverage) { %> --coverage<% } %>"
  },<% if (esnext) { %>
  "main": "dist/index.js",<% } %>
  "files": [
    "<% if (esnext) { %>dist<% } else { %>index.js<% } %>"
  ],
  "dependencies": {},
  "devDependencies": {<% if (esnext) { %>
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-add-module-exports": "^1.0.0",<% } %>
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "remove-lockfiles": "^2.0.4",<% if (esnext) { %>
    "rimraf": "^2.6.2",<% } %>
    "xo": "^0.23.0"
  },
  "jest": {
    "testEnvironment": "node"<% if (esnext) { %>,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ]<% } %>
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "space": true
  },
  "keywords": []
}
